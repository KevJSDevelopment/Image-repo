<nav class="navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <%= form_tag(new_upload_path, method: :get) do %>
        <%= submit_tag ("Add Photo +"), class: 'btn btn-outline-success'%>
    <% end %>
    <form class="d-flex">
      <div class= "search d-flex">
            <%= form_tag(uploads_path, method: :get) do %>
                <%= text_field_tag(:search, params[:search], class: 'form-control') %>
                <%= submit_tag ("Search"), class: 'btn btn-outline-light'%>
            <% end %>
        </div>
    </form>
  </div>
</nav>


<% @uploads.each do |upload| %>
    <div class="card" style="width: 18rem;">
        <%= image_tag @upload.image if @upload.image.attached? :class => "card-img-top" %>
        <div class="card-body">
            <h5 class="card-title"><%= upload.title %></h5>
            <p class="card-text"> <%= upload.description[0..30] %></p>
        </div>
    </div>
<% end %>