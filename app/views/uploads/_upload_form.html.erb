<div class="upload-container container">
    <div class="col">
    <%= form_with(model: @upload, local: true, multipart: true) do |form| %>
      <% if @upload.errors.any? %>
        <div id="error">
            <% @upload.errors.full_messages.each do |message| %>
              <div class="alert alert-info" role="alert"><%= message %></div>
            <% end %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control"  %>
      </div>
      
      <div class="mb-3">
        <%= form.label :image, class: "form-label" %>
        <div class="dropzone dropzone-default dz-clickable" data-controller="dropzone" data-dropzone-max-file-size="4" data-dropzone-max-files="1">
            <%= form.file_field :image, direct_upload: true, data: { target: 'dropzone.input' } %>
            <div class="dropzone-msg dz-message needsclick">
                <h3 class="dropzone-msg-title">Drag and drop file or click to browse </h3>
                <div class="dropzone-msg-desc text-sm">Max size: 1 file, 4MB </div>
                <div class="dropzone-msg-desc text-sm">File types: png, jpg, jpeg, or gif</div>
            </div>
        </div>
      </div>

      <div class="mb-3">
        <%= form.submit button_text, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>