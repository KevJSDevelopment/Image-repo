<% if flash[:message] %>
    <% flash[:message].each do|message|%>
        <div class="alert alert-info"> 
            <%= message %>
        </div>
    <%end%>
<%end%>

<div class="container">
  <div class="row">
    <div class="col-6 login">
        <div class="card login-card">
            <div class="card-title">
                Login
            </div>
            <div class="card-body">
                <%= form_with(model: @user, url: process_login_path,local: true, multipart: true) do |form| %>
                    <div class="form-group">
                        <%= form.label :username, "Username" %>
                        <%= form.text_field :username, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                        <%= form.label :password %>
                        <%= form.password_field :password, class: 'form-control' %>
                        <small id="emailHelp" class="form-text text-muted">Your password is case sensitive</small>
                    </div>
                    <div class="mb-4 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Remember me</label>
                    </div>
                    <%= form.submit "Login", class: "btn btn-primary" %>
                <%end%>
            </div>
        </div>
    </div>
    <div class="col-6 login">
        <div class="card login-card">
            <div class="card-title">
                Sign Up
            </div>
            <div class="card-body">
                <%= form_with(model: @user, url: users_path,local: true, multipart: true, method: :post) do |form| %>
                    <div class="form-group">
                        <%= form.label :username, "Username" %>
                        <%= form.text_field :username, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                        <%= form.label :password %>
                        <%= form.password_field :password, class: 'form-control' %>
                        <small id="emailHelp" class="form-text text-muted">Your password is case sensitive</small>
                    </div>
                    <small id="profile-optional-picture" class="form-text text-muted"><u>*Optional*</u></small>
                    <%= form.label :image, "Profile Picture", class: "form-label" %>
                    <div class="mb-3 dropzone-area">
                        <div class="dropzone dropzone-default dz-clickable" data-controller="dropzone" data-dropzone-max-file-size="4" data-dropzone-max-files="1">
                            <%= form.file_field :image, direct_upload: true, data: { target: 'dropzone.input'} %>
                            <div class="dropzone-msg dz-message needsclick">
                                <h3 class="dropzone-msg-title">Drag here to upload or click here to browse</h3>
                                <span class="dropzone-msg-desc text-sm">2 MB file size maximum. Allowed file types png, jpg.</span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-4 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Remember me</label>
                    </div>
                    <%= form.submit "Create Account", class: "btn btn-primary" %>
                <%end%>
            </div>
        </div>
    </div>
  </div>
</div>